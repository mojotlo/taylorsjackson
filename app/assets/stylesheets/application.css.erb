html {float: left; padding: 0; background-image: url(<%= asset_path("tsj_background2.png") %>);}

#central_container {float: left; width: 100%; min-height: 820px; }
body {position: relative;  float: left; width: 100%; position: relative; font-color: #141414 }

#background{position: absolute; top: -5%; left: -1%; width: 105%; z-index: -5; }

nav.main {position: absolute; right: 3%; top: 10em;  width: 9%;  font-family: "Infinity"; font-size: 1.4em; background-color: #871F78; 
opacity: 0.4; filter:alpha(opacity=40); }
nav.main ul {padding: .2em; margin: 0; }
nav.main li {list-style-type: none; margin-bottom: .3em; color: white; text-align: right;}
nav.main a {text-decoration: none; color: white;}
nav.main li:hover {color: #a0ab87; font-weight: 800;}

footer {position: relative; float: left; width: 90%; margin-left: 5%; font-family: "Infinity"; font-size: 1.4em; background-color: #871F78; 
opacity: 0.8; filter:alpha(opacity=80); }
footer ul {padding: .2em; margin: 0; }
footer li {list-style-type: none; margin-bottom: .3em; color: white; width: 22%; float: left; margin-left: 2%; ;}
footer a {text-decoration: none; color: white;}
footer li:hover {color: #a0ab87; font-weight: 800;}